<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:ems">10</item>
        <item name="font">@font/nunito_regular</item>
    </style>

    <style name="TextAppearance" parent="Base.TextAppearance"/>

    <style name="BlueLowTextAppearance" parent="TextAppearance">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SecondaryTextAppearance" parent="TextAppearance">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Toolbar.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="font">@font/nunito_bold</item>
        <item name="android:ems">10</item>
    </style>

    <style name="TextAppearance.Toolbar.Title.Expanded" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">38sp</item>
        <item name="android:ems">10</item>
        <item name="font">@font/nunito_bold</item>
    </style>

    <style name="TextAppearance.Toolbar.Subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">?attr/colorOnTertiary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:ems">10</item>
        <item name="font">@font/nunito_regular</item>
    </style>
</resources>